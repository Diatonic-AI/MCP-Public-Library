# Example .env file for AI Code Writer
# Copy this to create your own .env and fill in the values

# Required for most functionality
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Database connections
MONGODB_URI=mongodb://localhost:27017/ai-code-writer
REDIS_URL=redis://localhost:6379
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
QDRANT_URL=http://localhost:6333

# MongoDB Logger Configuration for Tool Execution Tracking
# The logger will use MONGODB_URI if these are not specified
MONGODB_LOGGER_DB=mcp_tool_logs
MONGODB_LOGGER_COLLECTION=tool_executions

# LM Studio (for local embeddings)
LM_STUDIO_BASE_URL=http://localhost:1234/v1

# Optional settings
LOG_LEVEL=info
DEBUG=false

