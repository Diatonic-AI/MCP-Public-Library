{
  "mcpServers": {
    "obsidian-note-creator": {
      "command": "node",
      "args": [
        "G:\\SmartGrowth\\mcp-servers\\note-creator-server.js"
      ],
      "env": {
        "VAULT_PATH": "G:\\SmartGrowth",
        "NODE_ENV": "production"
      }
    },
    "obsidian-text-processor": {
      "command": "node",
      "args": [
        "G:\\SmartGrowth\\mcp-servers\\text-processor-server.js"
      ],
      "env": {
        "VAULT_PATH": "G:\\SmartGrowth",
        "MAX_KEYWORDS": "10",
        "MIN_WORD_LENGTH": "3"
      }
    },
    "obsidian-file-manager": {
      "command": "node",
      "args": [
        "G:\\SmartGrowth\\mcp-servers\\file-manager-server.js"
      ],
      "env": {
        "VAULT_PATH": "G:\\SmartGrowth",
        "DEFAULT_FILE_EXTENSION": ".md",
